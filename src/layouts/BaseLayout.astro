---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  description: string;
  footer?: {
    isFixed?: boolean;
  };
}

const { title, description, footer } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <Header />
    <section class="my-16 flex items-center justify-center flex-col px-40">
      <slot />
    </section>
    <Footer isFooterFixed={footer?.isFixed} />
  </body>
</html>
